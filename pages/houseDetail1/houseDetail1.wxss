}
.house_number .number2 .number{
  text-align: left;
  font-size:36rpx;
  color:#EE696F;
}
.house_number .number2 .number image{
  width:28rpx;
  height:28rpx;
  vertical-align: middle;
  margin-right:5rpx;
}
.house_number .number2 .index{
  text-align: left;
  font-size:26rpx;
  color:#202020;
}
.house_number .number1{
