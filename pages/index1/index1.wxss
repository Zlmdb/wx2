.houseDetail{
  display: flex;
  justify-content: space-between;
}
.houseDetail_area{
  font-size:26rpx;
  color:#63BDE7;
  
}
.houseDetail_introduce{
  font-size:20rpx;
  color:#202020;
}
.houseDetail_introduce .house_type{
  padding:0 10rpx;
  border-right:1px solid #202020;
  text-align: center;
}
.houseDetail_introduce .house_room{
  padding:0 10rpx;
  border-right:1px solid #202020;
  text-align: center;
}
.houseDetail_introduce .house_area{
  padding:0 10rpx;
  text-align: center;
}
.house_photo{
  height:240rpx;
  margin:30rpx 0;
}
.house_photo image{
  display: inline-block;
   width:100%; 
  height:100%;
  overflow: hidden;
}
.house_number{
  display: flex;
  justify-content: space-between;
}
.house_number .number1 .number{
  font-size:36rpx;
  color:#EE696F;
  text-align: right;
}
.house_number .number1 .responseRate{
  font-size:26rpx;
  color:#202020;
  text-align: right;
}
.house_number .number2 .number{
  text-align: left;
  font-size:36rpx;
  color:#EE696F;
}
.house_number .number2 .number image{
  width:28rpx;
  height:28rpx;
  vertical-align: middle;
  margin-right:5rpx;
}
.house_number .number2 .index{
  text-align: left;
  font-size:26rpx;
  color:#202020;
}
.house_number .number1{
  flex:1.3;
}
.house_number .number2{
  flex:1.5;
}
.house_number .number3{
  flex:1;
  padding-top:30rpx;
}
.house_number .connect_line{
  width:115%;
  margin:0 auto;
  border-top:1px solid #202020;
  opacity: 0.2;
}
.pageBottom{
  text-align: center;
  color:#587594;
  font-size: 26rpx;
  padding-bottom: 30rpx;
}